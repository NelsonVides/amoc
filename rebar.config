{ erl_opts, [
    debug_info,
    warn_missing_spec]}.

{ deps, [
    {exometer_core, {git, "https://github.com/esl/exometer_core.git", {branch, "master"}}},
    {exometer_report_graphite, {git, "https://github.com/esl/exometer_report_graphite.git", {branch, "master"}}},
    {exometer_report_statsd, {git, "https://github.com/esl/exometer_report_statsd.git", {branch, "master"}}},
    %% when updating amoc_rest version, don't forget to update it at ./doc/http-api.md as well.
    {amoc_rest, {git, "https://github.com/esl/amoc_rest.git", {ref, "ec7bda0"}}}
]}.

{ profiles, [
    {test, [
        {deps, [
            {meck, "0.8.12"},
            {jiffy, "0.15.2"},
            {proper, "1.3.0"},
            {fusco, {git, "https://github.com/esl/fusco.git", {ref, "de08ade"}}}
        ]}
    ]},
    {prod, [
        {erl_opts, [{src_dirs, ["src", "scenarios"]}]},
        {relx, [
            {release, {amoc, git}, [amoc, runtime_tools, compiler]},
            {dev_mode, false},
            {include_erts, true},
            {include_src, false},
            {extended_start_script, true},
            {sys_config, "rel/app.config"}
        ]}]}
]}.

{ xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    deprecated_function_calls,
    deprecated_functions]}.
